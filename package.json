{
	"name": "flashtext.js",
	"version": "1.0.3",
	"description": "A JavaScript (ES6+ source with zero dependency) Port of the Python package FlashText @ https://github.com/vi3k6i5/flashtext",
	"main": "build/index.js",
	"directories": {
		"test": "test"
	},
	"scripts": {
		"test": "jest",
		"test:watch": "jest --watch",
		"build": "node_modules/.bin/minify src -d build",
		"release": "np"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/drenther/flashtext.js.git"
	},
	"keywords": [
		"flashtext",
		"search-in-text",
		"string-search",
		"nlp",
		"search-and-replace"
	],
	"author": "Soumyajit Pathak",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/drenther/flashtext.js/issues"
	},
	"homepage": "https://github.com/drenther/flashtext.js#readme",
	"devDependencies": {
		"babel-minify": "^0.2.0",
		"babel-preset-minify": "^0.2.0",
		"jest": "^21.2.1",
		"np": "^2.16.1"
	}
}
